<main>
  <div class="content">
      <h2> Editar informações: </h2>

      <hr>

      <div>
          <form action="/author/edit" method="POST">
            {{#if author}}
              <label for="_id">ID: </label>
              <input
                type="text"
                id="_id"
                name="_id"
                readonly="true"
                class="form-control"
                value="{{author._id}}"
              />
              <br />

              <label for="nome">Nome: </label>
              <input
                type="text"
                id="nome"
                name="nome"
                class="form-control"
                value="{{author.nome}}"
              />
              <br />

              <label for="descricao">Nacionalidade: </label>
              <input
                type="text"
                id="nacionalidade"
                name="nacionalidade"
                class="form-control"
                value="{{author.nacionalidade}}"
              />
              <br />

              <button type="submit" class="button">Atualizar
                informações</button>
            {{/if}}
          </form>
      </div>
    </div>
</main>